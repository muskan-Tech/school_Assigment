<%- include('includes/header') %>
    <!-- ======= Sidebar ======= -->
    <%- include('includes/sidebar') %>
    
        <main id="main" class="main">

            <div class="card">
                <div class="card-body">
           
                        
                    <form method="post" action="/student_att_mark">
                        <div class="row pt-4">
                          <div class="col-sm-5">
                            <select name="class_sub" class="form-control" required>
                                <option value="">Select class</option>
                                <% subject.forEach(function(sub) { %>
                                    <option value="<%= sub.class_id %>|<%= sub.id %>">
                                        <%= sub.class_name %> <%= sub.section %> <%= sub.subject %>      
                                    </option>
                                    <% }) %>
                                        
                        </select>
        
                          </div>
                          <div class="col-sm-1 pt-1">
                            <input type="submit" name="sea" class="btn btn-info" value="search" />
                          </div>
                          <div class="col-sm-1"></div>
                        </div>
                      </form>
                      
          
                    <!-- Add Classes Button and Modal -->
                    

                    <!-- Add Class Modal -->
                    
                    <!-- Class Listing Table -->
                    
                    <div class="table-responsive">
                        <table  style="margin-top: 3%;" class="table table-striped">
                            <thead>
                                <tr> 
                                    <th style="background-color:#950404;" scope="col">#</th>
                                    <th  style="background-color:#950404;" scope="col">Roll No</th>
                                    <th  style="background-color:#950404;" scope="col">Name</th>
                                    <th style="background-color:#950404;" scope="col">Date </th>
                                    <th style="background-color:#950404;" scope="col">Attandance </th>
                                   
                                    
                                </tr>
                            </thead>
                            <tbody>
                                <form action="/submit_student_att" method="post">
                                <% if(student_data.length> 0) { %>
                                    <% student_data.forEach(function(c, index) { %>
                                        
                                        <tr>
                                            <td>
                                                <%= index + 1 %>
                                                <input type="hidden" name="teacher_id" value="<%= session.register_id %>"> 
                                                <input type="hidden" name="subject_id" value="<%= subject_id %>"> 
                                            </td>
                                            <td><input type="hidden" name="user_id" value="<%= subject[0].user_id %>"> </td>
                                            <td>
                                                <%= c.full_name %>  
                                                <input type="hidden" name="student_id" value="<%= c.id %>"> 
                                                <input type="hidden" name="session" value="<%= c.session %>"> 
                                            </td>
                                            <td>
                                                <%= today %>
                                                <input type="hidden" name="date" value="<%= today %>"> 
                                            </td>
                                            <td>
                                                <div class="col-12">
                                                    <div class="form-check">
                                                      <input class="form-check-input" type="checkbox" name="status" value="1" id="" style="width: 30px; height: 30px; border-color:black" >
                                                  
                                                    </div>
                                                  </div> 
                                                
                                            </td>
                                          
                                        </tr>
                                        <% }); %>
                                            <% } else { %>
                                                <tr>
                                                    <td colspan="6" class="text-center">Firstly select the class.</td>
                                                </tr>
                                                <% } %>
                                                <tr>
                                                    <td class="text-end">
                                                    <button type="submit" class="btn btn-secondary text-end">Submit Attendance</button></td>
                      
                                                </tr>
                                            </form>
                                               
                            </tbody>
                            
                        </table>
                    </div>
                    </div>
                </div>
            </div>
        </main><!-- End #main -->



        <!-- ======= Footer ======= -->
        <%- include('includes/footer') %>