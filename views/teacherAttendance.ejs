<%- include('includes/header') %>
<!-- ======= Sidebar ======= -->
<%- include('includes/sidebar') %>

<main id="main" class="main">

    <div class="card">
        <div class="card-body">

            <!-- Class Listing Table -->
            <div class="table-responsive">
                <table style="margin-top: 3%;" class="table ">
                    <thead>
                        <tr>
                            <th style="background-color:#007bff;" scope="col">#</th>
                            <th style="background-color:#007bff;" scope="col">Name</th>
                            <th style="background-color:#007bff;" scope="col">Higher Qualification</th>
                            <th style="background-color:#007bff;" scope="col">Email</th>
                            <th style="background-color:#007bff;" scope="col">Date</th>
                            <th style="background-color:#007bff;" scope="col">Attendance</th>
                        </tr>
                    </thead>
                    <tbody>
                        <form action="/teacher_attendance_submit" method="post">
                            <% if (data.length > 0) { %>
                                <% data.forEach(function(c, index) { %>
                                    <tr>
                                        <td>
                                            <%= index + 1 %>
                                        </td>
                                        <td>
                                            <%= c.full_name %>
                                            <input type="hidden" name="teacher_id" value="<%= c.id %>">
                                        </td>
                                        <td><%= c.higher_qualification %></td>
                                        <td><%= c.email %></td>
                                        <td><%= today %></td>
                                        <td>
                                            <div class="col-12">
                                                <div class="form-check">
                                                    <input class="form-check-input" type="checkbox" name="status" value="1"  style="width: 30px; height: 30px; border-color:black">
                                                </div>
                                            </div>
                                        </td>
                                    </tr>
                                <% }); %>
                            <% } else { %>
                                <tr>
                                    <td colspan="5" class="text-center">Firstly select the class.</td>
                                </tr>
                            <% } %>
                            <tr>
                                <td colspan="5" class="text-end">
                                    <button type="submit" class="btn btn-secondary">Submit Attendance</button>
                                </td>
                            </tr>
                        </form>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</main><!-- End #main -->

<!-- ======= Footer ======= -->
<%- include('includes/footer') %>
